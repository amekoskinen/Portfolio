<% layout('layouts/boilerplate') %>
<main class="main">
  <!-- Contact Section -->
  <section id="contact" class="contact section">
    <!-- Section Title -->
    <div class="container section-title text-center mb-5">
      <h2>Contact</h2>
    </div>
    <!-- End Section Title -->

    <div class="container">
      <div class="row gy-4 justify-content-center align-items-center">
        <div class="col-lg-6">
          <div class="info-wrap">
            <div
              class="info-item d-flex"
              data-aos="fade-up"
              data-aos-delay="200"
            >
              <i class="bi bi-geo-alt flex-shrink-0"></i>
              <div>
                <h3>City</h3>
                <p>Turku, Finland</p>
              </div>
            </div>
            <!-- End Info Item -->

            <div
              class="info-item d-flex"
              data-aos="fade-up"
              data-aos-delay="400"
            >
              <a href="#contactForm">
                <i class="bi bi-envelope flex-shrink-0"></i>
              </a>

              <div>
                <h3>Email Address:</h3>
                <p>programmingtemp1@gmail.com</p>
              </div>
            </div>
            <!-- End Info Item -->
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15752.855825962883!2d22.23094633103996!3d60.4269413184813!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x468c77a677488efd%3A0x5ed53f5d606fb500!2sTurun%20linna!5e0!3m2!1sfi!2sfi!4v1763029425692!5m2!1sfi!2sfi"
              width="600"
              height="450"
              style="border: 0"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
          <div class="col-lg-12 mt-5 text-center">
            <form
              id="contactForm"
              class="row g-3 needs-validation"
              action="https://formspree.io/f/xdaloldl"
              method="post"
            >
              <div class="col-md-8 offset-md-2">
                <label for="name" class="form-label">Your name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  placeholder="Your name"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="col-md-8 offset-md-2">
                <label for="email" class="form-label">Email</label>
                <div class="input-group has-validation">
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="Email address"
                    required
                  />
                  <div class="invalid-feedback">Please insert your e-mail!</div>
                </div>
              </div>
              <div class="col-md-8 offset-md-2">
                <label for="message" class="form-label">Your Message:</label>
                <textarea
                  class="form-control"
                  name="message"
                  required
                ></textarea>
                <div class="invalid-feedback">Please enter your message.</div>
              </div>
              <div class="col-12">
                <button class="btn btn-primary" type="submit">
                  Submit form
                </button>
              </div>
            </form>
          </div>
          <!-- End Contact Form -->
        </div>
      </div>
    </div>
  </section>
  <!-- /Contact Section -->
</main>
<script>
  (() => {
    "use strict";

    const forms = document.querySelectorAll(".needs-validation");

    Array.from(forms).forEach((form) => {
      form.addEventListener(
        "submit",
        (event) => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false,
      );
    });
  })();
</script>
