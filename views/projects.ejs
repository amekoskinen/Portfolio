<% layout('layouts/boilerplate') %>
<!-- Projects Section -->

<section id="projects" class="projects section">
  <!-- Section Title -->
  <div class="container section-title">
    <h1 class="text-center mb-3">Projects</h1>
  </div>
  <!-- End Section Title -->

  <div class="container">
    <div
      id="projectCarousel"
      class="carousel slide projects-carousel"
      data-bs-ride="carousel"
    >
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="/assets/img/shoppingcart.jpg"
            class="d-block w-100"
            alt="Shopping list app"
          />
          <h2 class="text-center mt-3">Shopping List App</h2>
          <a
            href="https://github.com/amekoskinen/ShoppingList"
            class="btn btn-primary mt-4"
            target="_blank"
            >View on GitHub</a
          >
        </div>
        <div class="carousel-item">
          <img
            src="/assets/img/yelpcamp.jpg"
            class="d-block w-100"
            alt="YelpCamp Exercise"
          />
          <h2 class="text-center mt-3">YelpCamp Exercise</h2>
          <a
            href="https://github.com/amekoskinen/YelpCampExercise"
            class="btn btn-primary mt-4"
            target="_blank"
            >View on GitHub</a
          >
        </div>
        <div class="carousel-item">
          <img
            src="/assets/img/wordgame.jpg"
            class="d-block w-100"
            alt="Word Game"
          />
          <h2 class="text-center mt-3">Word Game</h2>
          <a
            href="https://github.com/amekoskinen/WordGame"
            class="btn btn-primary mt-4"
            target="_blank"
            >View on GitHub</a
          >
        </div>
        <div class="carousel-item">
          <img
            src="/assets/img/flightdeal.jpg"
            class="d-block w-100"
            alt="Flight Deal Finder"
          />
          <h2 class="text-center mt-3">Flight Deal Finder</h2>
          <a
            href="https://github.com/amekoskinen/FlightDealFinder"
            class="btn btn-primary mt-4"
            target="_blank"
            >View on GitHub</a
          >
        </div>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#projectCarousel"
        data-bs-slide="prev"
      >
        <span
          class="carousel-control-prev-icon bg-dark"
          aria-hidden="true"
        ></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#projectCarousel"
        data-bs-slide="next"
      >
        <span
          class="carousel-control-next-icon bg-dark"
          aria-hidden="true"
        ></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</section>
<!-- /Projects Section -->
